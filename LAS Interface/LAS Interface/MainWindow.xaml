<Window x:Class="LAS_Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAS_Interface"
        mc:Ignorable="d"
        Title="MainWindow">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Row="0"
              Height="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox ItemsSource="{Binding ClassItems}"
                     SelectedItem="{Binding SelectedClass}"/>
        </Grid>
        <TabControl x:Name="TabControl"
                    Grid.Row="1">
            <TabItem Header="Register" Height="22" VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="ListView" 
                  ItemsSource="{Binding ListItems, UpdateSourceTrigger=PropertyChanged}"
                  Grid.Column="0"
                              SelectedIndex="{Binding CurrentWeek, UpdateSourceTrigger=PropertyChanged}"/>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                   Grid.Column="1" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Label Content="Monday"
                               Grid.Row="0"/>
                            <DataGrid AutoGenerateColumns="True"
                                  Grid.Row="1"
                                  ItemsSource="{Binding DataObjectsMonday, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Content ="Tuesday"
                               Grid.Row="2" />
                            <DataGrid AutoGenerateColumns="True"
                                  Grid.Row="3"
                                  ItemsSource="{Binding DataObjectsTuesday, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Content ="Wednesday"
                               Grid.Row="4" />
                            <DataGrid AutoGenerateColumns="True"
                                  Grid.Row="5"
                                  ItemsSource="{Binding DataObjectsWednesday, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Content ="Thursday"
                               Grid.Row="6" />
                            <DataGrid AutoGenerateColumns="True"
                                  Grid.Row="7"
                                  ItemsSource="{Binding DataObjectsThursday, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Content ="Friday"
                               Grid.Row="8" />
                            <DataGrid AutoGenerateColumns="True"
                                  Grid.Row="9"
                                  ItemsSource="{Binding DataObjectsFriday, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="TimeTable">
                <DataGrid AutoGenerateColumns="True"
                          ItemsSource="{Binding TimeTableForView, UpdateSourceTrigger=PropertyChanged}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
